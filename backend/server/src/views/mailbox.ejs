<!DOCTYPE html>
<html lang="en">

<head>
  <title>Mail Box</title>
  <%- include('./partials/head') %>
    <!-- Espacio para estilos de esta pantalla-->
    <link rel="stylesheet" href="/css/index/mailbox.css" />
</head>

<body>
  <header class="header">
    <%- include('./partials/header') %>
  </header>
  <!--  -->
  <section>


    <div class="contenedor-lista">


      <ul class="lista-contactos">
        <%if(usuarios.length> 0){%>
          <h2 class="titulo-pagina">Mensajes</h2>
          <div class="contenedor-elemento-lista users">
            <% usuarios.forEach(usuario=> { %>
              <!-- <div class="col-12 col-sm-6 col-lg-3"> -->
              <section class="mail-box">
                <a href="/user/mailbox/<%= usuario.id %>">
                  <article class="product-box_data">
                    <!-- <span>
                      <%= usuario.username %> -
                    </span> -->
                    <p class="email">
                      Contacto: <%= usuario.email %>
                    </p>
                  </article>
                </a>
              </section>
              <hr />
              <!-- </div> -->
              <%})%>
          </div>
          <% } %>
            <!-- nuevo fin -->
      </ul>
      <br>
      <button class="guardar-boton" href="/user/createMessage">
   <a class="" href="/user/createMessage"> Nuevo</a>
      </button>
    </div>

  </section>
  <footer class="footer">
    <%- include('./partials/footer') %>
  </footer>
</body>

</html>