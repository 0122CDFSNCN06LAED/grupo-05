<a href="/" class="link-logo"
  ><img class="logo" src="/images/logo-icon.png" alt="Logo"
/></a>
<p><%=locals.userLogged.username%></p>

<div class="usuario-datos">
  <div class="usuario-texto">
    <p class="texto-gris"><%=locals.userLogged.tipoUsuario%></p>
  </div>
  <%let url=locals.userLogged.profileURL%>
  <img
    class="imagen-usuario"
    src="<%if (url){%>
        <%=url%>
        <%}else{%>
        /images/user-images/usuario.png 
        <% }%>"
    alt="profile pic"
  />

  <div class="dropdown">
    <i
      class="fa-solid fa-bars configuracion btn btn-secondary dropdown-toggle boton-desplegable"
      alt="icono-config"
      id="dropdownMenuButton1"
      data-bs-toggle="dropdown"
    ></i>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <li <% if (locals.userLogged.tipoUsuarioId !="1" ){ %>
        >
        <div class="dropdown-item opciones-desplegable">
          <a class="hipervinculo" href="/proyect/proposals-list"
            >Mis propuestas</a
          >
          <a href="/proyect/proposals-list"><i class="fa-solid fa-hand"></i></a>
        </div>
        <% } %>
      </li>
      <li <% if (locals.userLogged.tipoUsuarioId!="2" ){ %>
        >
        <div class="dropdown-item opciones-desplegable">
          <a class="hipervinculo" href="/proyect/proposals">Mis proyectos</a>
          <a href="/proyect/proposals"
            ><i class="fa-solid fa-clipboard-list-check"></i
          ></a>
        </div>
        <% } %>
      </li>
      <li>
        <div class="dropdown-item opciones-desplegable">
          <a class="hipervinculo" href="/user/mailbox">Buz√≥n</a>
          <a href="/user/mailbox"><i class="fa-solid fa-envelope"></i></a>
        </div>
      </li>
      <li>
        <div class="dropdown-item opciones-desplegable">
          <a class="hipervinculo" href="/user/config">Ver perfil</a>
          <a href="/user/config"><i class="fa-solid fa-circle-user"></i></a>
        </div>
      </li>

      <li>
        <!--           
          <div class="dropdown-item opciones-desplegable">
            <a class="hipervinculo" href="/user/logout" method="POST" type="submit"> Salir</a>
            <a href="/user/logout" method="POST"> <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
          </div> -->

        <form action="/user/logout" method="POST">
          <button class="hipervinculo" type="submit">
            <div class="dropdown-item opciones-desplegable">
              Salir <i class="fa-solid fa-arrow-right-from-bracket"></i>
            </div>
          </button>
        </form>
        <!-- <form action="/user/logout" method="POST">
          <button class="hipervinculo" type="submit">
            Salir
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
          </button>
        </form> -->
      </li>
    </ul>
  </div>
</div>

