<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Registro</title>
    <%- include('./partials/head') %>
    <!-- Espacio para estilos de esta pantalla-->
    <link rel="stylesheet" href="/css/index/index.css" />
    <link rel="stylesheet" href="/css/register&login/theme.css" />
    <link rel="stylesheet" href="/css/register&login/register-and-login.css" />
    <link rel="stylesheet" href="/css/register&login/breakpoints.css" />
  </head>

  <body>
    <main class="main-register">
      <h1 class="form-info">CREA UNA CUENTA</h1>
      <div class="hidden">
        <div class="register-section">
          <input type="button" name="facebook" id="facebook" value="facebook" />
          <input type="button" name="google" id="google" value="google" />
          <input type="button" name="linkedin" id="linkedin" value="linkedin" />
        </div>
        <hr class="solid" />
      </div>
      <form id="register-form" action="/user/register" method="POST" enctype="multipart/form-data">
        <div class="conteiner-fluid register-section">
          
          <!-- nombre -->
          <div class="input-div">
            <label class="input-label" for="name">Ingresá tu nombre</label>
            <input class="input-text" type="text" name="name" id="name" placeholder="Nombre" value="<%= locals.old && old.name%>" />
            <% if(locals.errors && errors.name){%>
            <p class="text-danger"><%=errors.name.msg%></p>
            <%}%>
            <p class="errorNombre"></p>
          </div>

          <!-- nombre de usuario -->
          <div class="input-div"> 
            <label class="input-label" for="usuarioNombre">Ingresá tu nombre de usuario</label>
            <input
              class="input-text"
              type="text"
              name="usuarioNombre"
              id="usuarioNombre"
              placeholder="Nombre usuario"
              value="<%= locals.old && old.usuarioNombre%>"
            />
            <p class="errorUsuarioNombre"></p>
            <% if(locals.errors && errors.usuarioNombre){%>
            <p class="text-danger"><%=errors.usuarioNombre.msg%></p>
            <%}%> <% if(repetidoUsername != ''){%>
            <p class="text-danger"><%=repetidoUsername%></p>
            <%}%>
          </div>

          <!-- apellido -->
          <div class="input-div">
            <label class="input-label" for="surname">Ingresá tu apellido</label>
            <input class="input-text" type="text" name="surname" id="surname" placeholder="Apellido" value="<%= locals.old && old.surname%>" />
            <% if(locals.errors && errors.surname){%>
              <p class="text-danger"><%=errors.surname.msg%></p>
            <%}%>
            <p class="errorSurname"></p>
          </div>

          <!-- email -->
          <div class="input-div">
            <label class="input-label" for="email ">Ingresá tu email</label>
            <input class="input-text" type="email" name="email" id="email" placeholder="Email" value="<%= locals.old && old.email%>" />
            <p class="errorEmail"></p>
            <% if(locals.errors && errors.email){%>
            <p class="text-danger"><%=errors.email.msg%></p>
            <%}%> <% if(repetidoEmail != ''){%>
            <p class="text-danger"><%=repetidoEmail%></p>
            <%}%>

          <!--password  -->
          </div>
          <div class="input-div"> 
            <label class="input-label" for="password">Ingresá tu contraseña</label>
            <input class="input-text" type="password" name="password" id="password" placeholder="Contraseña" />
            <p class="errorPassword"></p>
            <% if(locals.errors && errors.password){%>
            <p class="text-danger"><%=errors.password.msg%></p>
            <%}%>
          </div>
          <div class="input-div">
            <label class="input-label" for="passwordConfirmation">Repetir contraseña</label>
            <input class="input-text" type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Repetir contraseña" />
            <% if(locals.errors && errors.passwordConfirmation){%>
            <p class="text-danger"><%=errors.passwordConfirmation.msg%></p>
            <%}%>
          </div>

          <div class="row input-div">
            <h2 class="form-info">Defina el tipo de usuario</h2>
            <div class="col-12 col-sm-6 col-md-6 col-lg-6">
              <input type="radio" id="empresa" name="tipoUsuarioId" value="empresa" checked />
              <label for="empresa">Empresa</label>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-6">
              <input type="radio" id="freelancer" name="tipoUsuarioId" value="freelancer" />
              <label for="freelancer">Freelancer</label>
            </div>
          </div>
          <div class="row input-div">
            <div class="col-12 col-sm-6 col-md-6 col-lg-6">
              <label for="avatar"><h2 class="form-info">Subir imagen</h2></label>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
              <input type="file" name="avatar" />
            </div>
          </div>
          <br />
          <section >
            <ul class="errores"></ul>
          </section>
          <div class="input-div">
            <button>Registrame</button>
          </div>
          <div>
            <h2 class="form-info">Al unirme, acepto recibir correos de proyectos</h2>
          </div>
        </div>
      </form>
    </main>
    <footer class="footer"><%- include('./partials/footer') %></footer>
    <script src = '/js/registerValidation.js'></script>
    </script>
  </body>
</html>
