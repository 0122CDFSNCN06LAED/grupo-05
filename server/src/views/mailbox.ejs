<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Mail Box</title>
    <%- include('./partials/head') %>
    <!-- Espacio para estilos de esta pantalla-->
    <link rel="stylesheet" href="./css/index/index.css" />
    <link rel="stylesheet" href="./css/index/mailbox.css" />
  </head>

  <body>
    <header class="header"><%- include('./partials/header') %></header>
    <!--  -->
    <main>
      <h2>MailBox</h2>
      <div class="contenedor-lista">
        <ul class="lista-contactos">
          <div class="contenedor-elemento-lista">
            <!-- Nuevo  inicio-->
            <hr />
            <% emails.forEach(mensaje=> { %>
            <div class="col-12 col-sm-6 col-lg-3">
              <section class="mail-box">
                <a href="/products/<%= mensaje.idMensaje %>">
                  <article class="product-box_data">
                    <span> <%= mensaje.fechaMensaje %> - </span>
                    <p><%= mensaje.contenidoMensaje %></p>
                  </article>
                </a>
              </section>
              <hr />
            </div>
            <% }) %>
          </div>
          <!-- nuevo fin -->
        </ul>
      </div>
    </main>
    <footer class="footer"><%- include('./partials/footer') %></footer>
  </body>
</html>
