<!DOCTYPE html>
<html lang="en">

<head>
  <title>Proyect-edition</title>
  <%- include('./partials/head') %>
  <!-- Espacio para estilos de esta pantalla-->
  <link rel="stylesheet" href="/css/index/index.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/bidding-detail/bidding-creation.css" />
</head>

<body>
  <header class="header"><%- include('./partials/header') %></header>

  <h8 class="products-title">
    Editando producto
  </h8>

  <div class="contenido">
    <form action="/proyect/<%= proyecto.idProyecto %>?_method=PUT" method="POST">
      <div class="item-form">
        <label for="titulo">Ingrese un título</label>
        <input class="input-small" type="text" name="titulo" id="titulo" value="<%=proyecto.tituloProyecto%>" />
        <%console.log('wwwwwwww', proyecto, categorias)%>
        <% if(locals.errors && errors.titulo){%>
          <p><%=errors.titulo.msg%></p>
        <%}%>
      </div>
      <div class="item-form descrip">
        <label for="descripcion">Describa su proyecto</label>
        <textarea class="input" name="descripcion" id="descripcion" cols="30" rows="10" "><%=proyecto.descripcionProyecto%></textarea>
        <% if(locals.errors && errors.descripcion){%>
          <p><%=errors.descripcion.msg%></p>
        <%}%>
      </div>
      <div class=" item-form prec">
        <label for="precio">Precio</label>
        <input class="input-small" type="text" name="precio" id="precio" value="<%=proyecto.precioProyecto%>" />
        <% if(locals.errors && errors.precio){%>
          <p><%=errors.precio.msg%></p>
        <%}%>
      </div>
      <div class="item-form">
        <label for="categorias">Seleccione las categorías</label>
      </div>
      <div class="categorias-check">
        <% for (let i = 0; i < categorias.length; i++) {%>
          <%let k = false%>
          <div class="checkbox-item">
            <label class="label-checkbox" for="categorias"><%=categorias[i].nombreCategoria%></label>
            <% for (let j = 0; j < proyecto.categoria.length; j++) { %>
            <% if (categorias[i].nombreCategoria==proyecto.categoria[j]) {%>
              <%k = true%>
            <%}%>
            <%}%>
            <%if(k == true){%>
              <input class="checkbox" type="checkbox" name="categoria" value="<%=categorias[i].nombreCategoria%>" checked/>
            <%}else{%>
            <input class="checkbox" type="checkbox" name="categoria" value="<%=categorias[i].nombreCategoria%>" />
          <%}%>
          </div>
        <%}%>
        
      </div>
      <div class="botones">
        <button class="guardar-boton" type="submit">Guardar</button>
        <button class="boton-cancelar" type="cancel">Cancelar</button>
        <button class="boton-cancelar" type="cancel">Eliminar</button>
        <!-- <div class="item-form">
          <form action="/proyect/<%= proyecto.idProyecto%>?_method=DELETE">
            <button class="guardar-cancelar"  type="submit">
              Eliminar
            </button>
          </form>
        </div>       -->  
      </div>

    <footer class="footer"><%- include('./partials/footer') %></footer>
  </body>
</html>